<section id="banner">
    <div class="content">
        <header>
            <h1>User Registration<br />
            </h1>
        </header>
        <p>Please create a user account to follow and/or donate to your favorite projects.</p>
    </div>
</section>

<section>

    <form action='/register' method='POST'>
        <div class="row gtr-uniform">
            <div class="row gtr-uniform">
                <div class="col-12 col-12-xsmall">
                    <input type="text" id="usernameInput" value="" placeholder="Name" name='name'/>
                </div>
                <div class="col-12 col-12-xsmall">
                    <input type="email" id="emailInput" value="" placeholder="Email" name='email'/>
                </div>
                <div class="col-12 col-12-xsmall">
                    <input type="password" id="passwordInput" value="" placeholder="password" name='password' />
                </div>
                <div class="col-12  col-12-xsmall">
                    <input type="password" id="passwordVerify" value="" placeholder="password" name='passwordVerify' />
                </div>
            </div>



            <!-- Break -->
            <div class="col-12">
                <ul class="actions">
                    <li><input type="submit" id="registerUser" value="Submit" class="primary" /></li>
                    <li><input type="reset" value="Reset" /></li>
                </ul>
            </div>
        </div>
    </form>
</section>


